<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="15dp"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/alertDialogHeadingTextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:text="Just one more step to your cashback..."
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/alertDialogHeadingTextview"
        android:id="@+id/alertDialogImageView"/>


    <EditText
        android:id="@+id/alertDialogTotalAmtEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/alertDialogImageView"
        android:fontFamily="sans-serif-condensed"
        android:hint="Bill Amount*"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/alertDialogOrderIdEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/alertDialogTotalAmtEditText"
        android:fontFamily="sans-serif-condensed"
        android:hint="OrderId(Optional)"
        android:textStyle="bold" />



</RelativeLayout>